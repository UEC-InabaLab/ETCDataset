            "emotions": [
                [
                    "嫌悪"
                ],
                [
                    "恐怖"
                ],
                [
                    "悲しみ"
                ]
            ],
            "utterance": "私もそういう上司がいたことがあります。どこにもいらっしゃるんですね。",
            "emotion_transcription": "とても共感しました。"
