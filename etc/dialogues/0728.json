        {
            "turn": 2,
            "role": "speaker",
            "emotions": [
                [
                    "該当なし"
                ],
                [
                    "喜び"
                ],
                [
                    "喜び"
                ]
            ],
            "utterance": "アジサイですか。それは素敵ですね。",
            "emotion_transcription": "とても母親想いで感服します。"
        },
        {
            "turn": 2,
            "role": "listener",
