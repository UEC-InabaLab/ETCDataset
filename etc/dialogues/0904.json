        {
            "turn": 1,
            "role": "listener",
            "emotions": [
                [
                    "該当なし"
                ],
                [
                    "該当なし"
                ],
                [
                    "該当なし"
                ]
            ],
            "utterance": "わかります。備蓄米など見かけたこともないです",
            "emotion_transcription": "自分も以前ここで同じことを書いたことを思い出します"
        },
        {
            "turn": 2,
