        {
            "turn": 3,
            "role": "speaker",
            "emotions": [
                [
                    "悲しみ"
                ],
                [
                    "該当なし"
                ],
                [
                    "悲しみ"
                ]
            ],
            "utterance": "本当に景気良くないですね。減税してほしいです。",
            "emotion_transcription": "相手の話への共感を示そうとしました。"
        },
